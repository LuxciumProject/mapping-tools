{
  // "extends": "@rushstack/heft-jest-plugin/includes/jest-shared.config.json",
  "coverageDirectory": "../dist/coverage",
  "verbose": true,
  "transform": {
    "^.+\\.(ts|tsx)?$": [
      "ts-jest",
      {
        "diagnostics": true
      }
    ],
    "^.+\\.(js|jsx)$": "babel-jest"
  },
  // "collectCoverageFrom": [
  //   "src/**/*.{js,jsx,ts,tsx}"
  // ],
  //   "!**/node_modules/**",
  //   "!src/tests/**/*",
  //   "!src/**/index.ts",
  //   "!src/classes/chain.ts"
  // ],
  // "coveragePathIgnorePatterns": [
  //   "node_modules",
  //   "dist",
  //   "lib"
  // ],
  "testEnvironment": "node",
  "moduleFileExtensions": [
    "js",
    "json",
    "jsx",
    "ts",
    "tsx",
    "node"
  ],
  "rootDir": "../src",
  "testMatch": [
    // "./tests/**/*.*.[jt]s?(x)"
    // "./tests/**/*.*"
    "**/?(*.)+(spec|test).[jt]s?(x)"
  ],
  "testPathIgnorePatterns": [
    "./out"
  ],
  "collectCoverage": false,
  "coverageThreshold": {
    "global": {
      "statements": 90,
      "branches": 90,
      "functions": 90,
      "lines": 90
    }
  }
}
