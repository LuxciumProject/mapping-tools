{
  "coverageDirectory": "../dist/coverage",
  "verbose": true,
  "transform": {
    "^.+\\.(ts|tsx)?$": [
      "ts-jest",
      {
        "diagnostics": true
      }
    ],
    "^.+\\.(js|jsx)$": "babel-jest"
  },
  "testEnvironment": "node",
  "moduleFileExtensions": [
    "js",
    "json",
    "jsx",
    "ts",
    "tsx",
    "node"
  ],
  "rootDir": "./src",
  "testMatch": [
    "**/?(*.)+(spec|test).[jt]s?(x)"
  ],
  "testPathIgnorePatterns": [
    "./out"
  ],
  "collectCoverage": false,
  "coverageThreshold": {
    "global": {
      "statements": 90,
      "branches": 90,
      "functions": 90,
      "lines": 90
    }
  }
}
